// Top Bar Start
div.topbar
      
    // LOGO
    div.topbar-left
      div
        a(href="#" class="logo")
          img(src="http://www.uninorte.edu.co/Uninorte/images/topbar_un/headerlogo_un.png" alt="logo" class="logo-lg")
          img(src="http://www.ssintegra.com/images/uninorte.png" alt="logo" class="logo-sm hidden")
      
    // Top navbar
    div(class="navbar navbar-default" role="navigation")
      div.container
        div
            
          // Mobile menu button
          div.pull-left
            button(type="button" class="button-menu-mobile visible-xs visible-sm")
              i(class="fa fa-bars")
            span.clearfix
           
          // Top nav left menu
          ul(class="nav navbar-nav hidden-sm hidden-xs top-navbar-items")
            li
              a(href='/about' class="btn") Acerca de
            li
              a(class="/help") Ayuda
            
          // Top nav Right menu
          ul(class="nav navbar-nav navbar-right top-navbar-items-right pull-right")
            li.hidden-xs
              form(class="navbar-left pull-left" style="padding-top:12%;")
                a(href='/home' class="btn btn-primary" style="padding-rigth:2%;") #[i(class="ti-home")] Inicio
                a(href='/logout' class="btn btn-danger") #[i(class="ti-power-off")] Salir 
                    
    // Page content start
    div.page-contentbar
        
      // left navigation start
      aside.sidebar-navigation
        div.scrollbar-wrapper
          div
            button(type="button" class="button-menu-mobile btn-mobile-view visible-xs visible-sm")
              i(class="mdi mdi-close")
            // User Detail box
            div.user-details
              div.pull-left
                img(src="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png" alt="" class="thumb-md img-circle")
              div.user-info   
                a #{user.local.name.nombre} #{user.local.name.apellidos}                    
                p(class="text-muted m-0") #{user.local.userType}
            
            // Left Menu Start
            ul(class="metisMenu nav" id="side-menu")
              li
                a(href="/profile") #[i(class="ti-home")] Inicio
              li
                a(href="/profile/update") #[i(class="ti-id-badge")] Actualizar datos
              li
                a(href="/profile/adopciones") #[i(class="ti-layout-list-thumb-alt")] Procesos de adopci√≥n 