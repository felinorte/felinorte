extends ../admin/default

block content
  
  div#page-wrapper
    
    include _topBar 
    
    // START PAGE CONTENT
    div(id="page-right-content" style="min-height: 600px;")
      - if (messages.info)
          div(class="alert alert-icon alert-success alert-dismissible fade in" role="alert")
            button(type="button" class="close" data-dismiss="alert" aria-label="Close")
              span(aria-hidden="true") x
            i(class="mdi mdi-check-all")
            strong ¡Éxito!
            p #{messages.info}
      - if (messages.error)
          div(class="alert alert-icon alert-danger alert-dismissible fade in" role="alert")
            button(type="button" class="close" data-dismiss="alert" aria-label="Close")
              span(aria-hidden="true") x
            i(class="mdi mdi-block-error")
            strong ¡Error!
            p #{messages.error}
    
      div.container
        div.row
          div.col-sm-12
            h4(class="m-t-0 header-title") Mis procesos de adopción
        
        - if(adopciones.length > 0)
            div.row
              div.col-sm-12
                table(id="datatable" class="table table-striped table-bordered")
                  thead
                    tr
                      th ID
                      th Gato
                      th Fecha
                      th Estado

                  tbody
                  each adopcion in adopciones
                    tr
                      td #[a #{adopcion._id}]
                      td #{adopcion.gato.nombre}
                      td #{adopcion.fecha_inicio.getDate()} / #{adopcion.fecha_inicio.getMonth() + 1} / #{adopcion.fecha_inicio.getFullYear()}
                      td #{adopcion.estado}
        - else
          h1 ¡No has iniciado ningún proceso de adopción!
                      
                      
      div.footer
        div
          <strong>felinorte</strong> - Copyright &copy; 2017