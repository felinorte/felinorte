extends default

block content
  // HOME
  section
    div.container
      div.row
        div.col-sm-12
        
          div.wrapper-page
            div(class='m-t-40 card-box')
              div.text-center
                h2(class="text-uppercase m-t-0 m-b-30")
                  a(href="index.html" class="text-success")
                    span
                      img(src="/images/logo.png" alt="" height="30")
                                  
              div.account-content
                form(class='form-horizontal' action='/' method='POST')
                
                  div(class='form-group m-b-20')
                    div.col-xs-12
                      label(for="emailaddress") Correo electrónico
                      input(class="form-control" type="email" id="emailaddress" required="true" placeholder="pepito@uninorte.edu.co")
                  div(class='form-group m-b-20')
                    div.col-xs-12
                      label(for="password") Contraseña
                      input(class="form-control" type="password" required="true" id="password" placeholder="Escriba su contraseña")
                  div(class='form-group m-b-20')
                    div.col-xs-12
                      div(class='checkbox checkbox-primary')
                        input(id="checkbox5" type="checkbox")
                        label(for="checkbox5") Recordarme
                  
                  div(class="form-group account-btn text-center m-t-10")
                    div(class="col-xs-12")
                      button(class="btn btn-lg btn-primary btn-block" type="submit") Entrar
                
                div.clearfix
            
            
          

          